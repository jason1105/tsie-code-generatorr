<idea-plugin require-restart="false">
    <name>TSIE Database Generator</name>
    <vendor email="lvwei@tsintergy.com" url="http://git.tsintergy.com:8070/ssc/code-generator/code-generator">TSIE-SSC</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceImplementation="com.github.houkunlin.config.ConfigService"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action
                id="com.github.houkunlin.action.MainAction"
                class="com.github.houkunlin.action.MainAction"
                text="Generator Code"
                description="Generator code">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
